<h1>Edit Resource Type</h1>

<%= form_with model: @resource_type, url: admin_resource_type_path(@resource_type), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Resource Type Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Resource Type", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to t('.back_to_resource_manager'), admin_resources_path %>
