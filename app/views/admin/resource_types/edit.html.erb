<h1><%= t('.edit_resource_type') %></h1>

<%= form_with model: @resource_type, url: admin_resource_type_path(@resource_type), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, t('admin.resource_types.title') %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit t('.update_resource_type'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to t('admin.resource_types.new.back_to_resource_manager'), admin_resources_path %>
