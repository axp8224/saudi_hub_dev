<div class="w-full">
  <%= paginate users %>

  <% columns = [
    t('admin.users.index.users_table.full_name'),
    t('admin.users.index.users_table.email'),
    t('admin.users.index.users_table.role'),
    t('admin.users.index.users_table.action')
  ] %>
  
  <% rows = users.map do |user|
    [
      user.full_name,
      user.email,
      t("roles.#{user.role.name.parameterize.underscore}"),
      (current_user != user) ? link_to( t('admin.users.index.users_table..update_role'),edit_admin_user_path(user), class: 'btn btn-secondary') : ''
    ]
  end %>

  <%= render 'shared/table', columns: columns, rows: rows %>
  
  <%= paginate users %>
</div>
