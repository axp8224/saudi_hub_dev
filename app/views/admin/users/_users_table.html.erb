<table>
  <thead>
    <tr>
      <th><%= t('admin.users.index.users_table.full_name') %></th>
      <th><%= t('admin.users.index.users_table.email') %></th>
      <th><%= t('admin.users.index.users_table.role') %></th>
      <th><%= t('admin.users.index.users_table.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td>
          <% if current_user != user %>
            <%= link_to t('admin.users.index.users_table..update_role'), edit_admin_user_path(user) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate users %>
