<h1>Manage Users</h1>

<%= form_with url: admin_users_path, method: :get, local: true do %>
  <div class="form-group">
    <%= label_tag :search, "Search Users" %>
    <%= text_field_tag :search, params[:search], placeholder: "Enter full name or email" %>
    
    <%= submit_tag "Search" %>

    <%= label_tag :per_page, "Items per page" %>
    <%= select_tag :per_page, options_for_select([5, 10, 20], params[:per_page] || 10), onchange: 'this.form.submit();' %>
  </div>
<% end %>

<div id="users-table">
  <%= render 'users_table', users: @users %>
</div>

<%= link_to 'Back to Dashboard', root_path %>
