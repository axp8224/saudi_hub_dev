<div class="max-w-screen-xl mx-auto">
    <h3 class="text-3xl font-bold"><%= t('dashboards.user_greeting', name: current_user.full_name) %></h3>

    <div class="text-md font-medium text-center text-gray-500 border-b border-gray-200 my-4">
        <ul class="flex flex-wrap -mb-px">
            <li class="me-2">
                <%= link_to t('dashboards.view_profile'), user_profile_path, class: "inline-block p-4 border-b-2 rounded-t-lg #{current_page?(user_profile_path) ? 'text-color1 border-color1 font-bold' : 'border-transparent hover:text-gray-600 hover:border-gray-300 hover:font-bold'}" %>
            </li>
            <li class="me-2">
                <%= link_to t('dashboards.view_my_posts'), posts_user_path(current_user), class: "inline-block p-4 border-b-2 rounded-t-lg #{current_page?(posts_user_path(current_user)) ? 'text-color1 border-color1 font-bold' : 'border-transparent hover:text-gray-600 hover:border-gray-300 hover:font-bold'}" %>
            </li>
            <% if current_user&.role&.name == 'admin' %>    
                <li class="me-2">
                    <%= link_to t('dashboards.logs'), admin_logs_path, class: "inline-block p-4 border-b-2 rounded-t-lg #{current_page?(admin_logs_path) ? 'text-color1 border-color1 font-bold' : 'border-transparent hover:text-gray-600 hover:border-gray-300 hover:font-bold'}" %>
                </li>
                <li class="me-2">
                    <%= link_to t('shared.manage_resources'), admin_resources_path, class: "inline-block p-4 border-b-2 rounded-t-lg #{current_page?(admin_resources_path) ? 'text-color1 border-color1 font-bold' : 'border-transparent hover:text-gray-600 hover:border-gray-300 hover:font-bold'}" %>
                </li>
                <li class="me-2">
                    <%= link_to t('dashboards.manage_users', Default: "Manage Users"), admin_users_path, class: "inline-block p-4 border-b-2 rounded-t-lg #{current_page?(admin_users_path) ? 'text-color1 border-color1 font-bold' : 'border-transparent hover:text-gray-600 hover:border-gray-300 hover:font-bold'}" %>
                </li>
            <% end %>
        </ul>
    </div>
</div>
