<div class="overflow-x-auto rounded-lg shadow-lg">
  <table class="min-w-full bg-white border-collapse">
    <thead class="bg-gray-200 text-gray-600 uppercase text-xs font-semibold">
      <tr>
        <% columns.each do |column| %>
          <th class="px-6 py-3 border-b border-gray-300 text-left"><%= column %></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="text-gray-700">
      <% rows.each do |row| %>
        <tr class="border-b hover:bg-gray-100">
          <% row.each do |cell| %>
            <td class="px-6 py-4"><%= cell %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if rows.empty? %>
  <div class="mt-4 text-center mb-48 text-gray-500">
    <%= t('search.no_results') %>
  </div>
<% end %>