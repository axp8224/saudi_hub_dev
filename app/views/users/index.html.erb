<%= link_to( t('.back_to_dashboard') , root_path) %>
<h1><%= t('.member_directory') %></h1>


<table>
    <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.email') %></th>
        <th><%= t('.bio') %></th>
        <th><%= t('.class_year') %></th>
        <th><%= t('.major') %></th>
        <th><%= t('.role') %></th>
    </tr>

    <% @users.each do |user| %>
    <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <% if user.profile %>
            <td><%= user.profile.bio %></td>
            <td><%= user.profile.class_year %></td>
            <td><%= user.profile.major.present? ? user.profile.major.name : '' %></td>
            <td><%= user.profile.role.present? ? user.profile.role.name : 'No Role Assigned' %></td>
        <% end %>
    </tr>
    <% end %>

</table>
