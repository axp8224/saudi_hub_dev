<div class="flex justify-center items-center fixed inset-0 z-50 bg-black bg-opacity-50">
  <!-- Main modal -->
  <div id="default-modal" tabindex="-1" aria-hidden="true" class="overflow-y-auto overflow-x-hidden w-full h-full flex justify-center items-center">
      <div class="relative p-4 w-full max-w-2xl">
          <!-- Modal content -->
          <div class="relative bg-white rounded-lg shadow">
              <!-- Modal header -->
              <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                  <h3 class="text-xl font-semibold text-gray-900"><%= t('shared.privacy_policy') %></h3>
                  <%= button_to accept_privacy_policy_path(user_id: @user.id, accept: false), method: :post, class: "text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center", data: { "modal-hide" => "default-modal" } do %>
                      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                      </svg>
                      <span class="sr-only"><%= t('shared.close_modal')</span>
                  <% end %>
              </div>
              <!-- Modal body -->
              <div class="p-4 md:p-5 space-y-4">
                  <p class="text-base leading-relaxed text-gray-500"><%= t('shared.privacy_policy_pg_1') %></p>
                  <p class="text-base leading-relaxed text-gray-500"><%= t('shared.privacy_policy_pg_2') %></p>
              </div>
              <!-- Modal footer -->
              <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b">
                  <%= button_to t('shared.accept'), accept_privacy_policy_path(user_id: @user.id, accept: true), method: :post, class: "accept-btn focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
                  <%= button_to t('shared.decline'), accept_privacy_policy_path(user_id: @user.id, accept: false), method: :post, class: "decline-btn py-2.5 px-5 ms-3 text-sm font-medium bg-white rounded-lg border border-gray-200" %>
              </div>
          </div>
      </div>
  </div>
</div>
