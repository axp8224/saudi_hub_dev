<div class="container p-6 mb-16 mx-auto">
  <!-- Profile Section -->
  <div class="max-w-4xl flex-col md:mx-auto justify-center">

    <!-- Name Section -->
    <div class="mb-4 pt-16 flex justify-start">
      <h1 class="text-4xl font-semibold" style="color: #C29062;"><%= @user.full_name %></h1>
    </div>

    <!-- Bio and Avatar Section -->
    <div class="flex flex-col md:flex-row justify-between items-start mb-4 md:mb-2 md:gap-10"> 

      <!-- Bio Section -->
      <div class="order-2 md:order-1 max-w-sm"> 
        <p class="text-gray-700 text-lg leading-relaxed">
          <%= @user.bio.present? ? @user.bio : t('.no_bio') %>
        </p>
      </div>

      <!-- Profile Avatar -->
      <% if @user.avatar.attached? %>
        <div class="w-30 h-30 flex-shrink-0 ml-0 md:ml-4 order-1 md:order-2 mb-6 mt-4"> 
          <%= image_tag(@user.avatar, size: "350x350", class: 'object-cover rounded-md', alt: t('.your_profile')) %>
        </div>
      <% else %>
        <div class="w-30 h-30 flex-shrink-0 ml-0 md:ml-4 order-1 md:order-2 mb-6 mt-4"> 
          <%= image_tag '/default-avatar.svg', class: 'object-cover rounded-md', alt: 'Placeholder image' %>
        </div>
      <% end %>
    </div>

    <!-- Fancy Gradient Divider -->
    <hr class="my-4 ml-0 max-w-sm" style="border: none; height: 3px; background: linear-gradient(to right, #C29062, black);">

    <!-- Profile Details Section -->
    <div class="flex flex-col items-start gap-2 text-lg mt-4">
      <p><strong><%= t('.role') %>:</strong> 
        <%= @user.role ? t("roles.#{@user.role.name.parameterize.underscore}", default: @user.role.name) : '' %>
      </p>
      <p><strong><%= t('.email') %>:</strong> <%= @user.email %></p>
      <% if @user.phone_public %>
        <p><strong><%= t('users.show.phone') %>:</strong> <%= @user.phone_number %></p>
      <% end %>
      <p><strong><%= t('.major') %>:</strong> 
        <%= @user.major ? t("majors.#{@user.major.name.parameterize.underscore}", default: @user.major.name) : '' %>
      </p>
      <p><strong><%= t('.class_year') %>:</strong> 
        <%= @user.class_year ? t("class_years.#{@user.class_year.name.parameterize.underscore}", default: @user.class_year.name) : '' %>
      </p>
      <p><strong><%= t('.grad_year') %>:</strong> <%= @user.grad_year if @user.grad_year %></p>
    </div>

    <!-- Edit Profile Button -->
    <div class="flex flex-row mt-6">
      <% if @is_current_user %>
        <%= link_to t('.edit_your_profile'), edit_user_profile_path, class: "text-sm text-white px-4 py-2 font-semibold hover:bg-[#3b0e0c] #{I18n.locale == :ar ? 'ml-4' : 'mr-4'}", style: "background-color: #471815; border-radius: 0.25rem;" %>
      <% end %>
      
      <%= link_to t('shared.back_to_member_directory'), users_path, class: "text-sm text-white px-4 py-2 font-semibold hover:bg-[#3b0e0c] #{I18n.locale == :ar ? 'ml-4' : 'mr-4'}", style: "background-color: #471815; border-radius: 0.25rem;" %>
    </div>

  </div>
</div>
