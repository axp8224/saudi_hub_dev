<div class="container mx-auto p-6">
  <!-- Profile Section -->
  <div class="max-w-4xl mx-auto">

    <!-- Name Section -->
    <div class="mb-4 pt-16 flex justify-start">
      <h1 class="text-4xl font-semibold" style="color: #C29062;"><%= @user.full_name %></h1>
    </div>

    <!-- Bio and Avatar Section -->
    <div class="relative flex sm:flex-row justify-between items-start sm:items-center mb-4 sm:mb-2 gap-0"> <!-- Removed gap-4 -->

      <!-- Bio Section -->
      <div class="w-1/2 text-left"> 
        <p class="text-gray-700 text-lg leading-relaxed">
          <%= @user.bio.present? ? @user.bio : t('.no_bio') %>
        </p>
      </div>

      <!-- Profile Avatar -->
      <% if @user.avatar.attached? %>
        <div class="w-30 h-30 flex-shrink-0 ml-4 sm:ml-0"> 
          <%= image_tag(@user.avatar, size: "350x350", class: ' object-cover rounded-md', alt: t('.your_profile')) %>
        </div>
      <% end %>
    </div>

    <!-- Fancy Gradient Divider -->
    <hr class="my-4 ml-0 w-1/2" style="border: none; height: 3px; background: linear-gradient(to right, #C29062, black);">

    <!-- Profile Details Section -->
    <div class="w-1/2 flex flex-col items-start gap-2 text-lg text-left mt-4">
      <p><strong><%= t('.role') %>:</strong> <%= @user.role.name %></p>
      <p><strong><%= t('.email') %>:</strong> <%= @user.email %></p>
      <% if @user.phone_public %>
        <p><strong><%= t('.phone') %>:</strong> <%= @user.phone_number %></p>
      <% end %>
      <p><strong><%= t('.major') %>:</strong> <%= @user.major.name if @user.major %></p>
      <p><strong><%= t('.class_year') %>:</strong> <%= @user.class_year.name if @user.class_year %></p>
      <p><strong><%= t('.grad_year') %>:</strong> <%= @user.grad_year if @user.grad_year %></p>
    </div>

    <!-- Edit Profile Button -->
    <div class="flex space-x-4 mt-6">
      <% if @is_current_user %>
        <%= link_to t('.edit_your_profile'), edit_user_profile_path, class: 'text-sm text-white px-4 py-2 font-semibold hover:bg-[#3b0e0c]', style: "background-color: #471815; border-radius: 0.25rem;" %>
      <% end %>
      
      <%= link_to t('shared.back_to_member_directory'), users_path, class: 'text-sm text-white px-4 py-2 font-semibold hover:bg-[#3b0e0c]', style: "background-color: #471815; border-radius: 0.25rem;" %>
    </div>

  </div>
</div>
